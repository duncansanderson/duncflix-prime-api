// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  username  String   @unique
  password  String
}

model Movie {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  actors      String
  director    String
  genre       String
  plot        String
  poster      String
  rated       String
  ratings     String[]
  released    String
  runtime     String
  title       String
  type        String
  year        String
  writer      String
  formats     String[]
}
